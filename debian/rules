#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@ --with systemd,autotools-dev

override_dh_auto_configure:
	./configure --prefix=/usr --disable-silent-rules --enable-systemd

override_dh_strip:
	dh_strip --dbg-package=conntrack-tools-dbg

override_dh_installinit:
	# dh_installinit will mess with sysvinit init script
	# in maintainer scripts, but we don't ship them
	dh_installinit -n
